<%= render 'header' %>

<!-- Container -->
<div id="container">
  <div class="shell">

<!-- Place for rendering error Messages -->
    <br />
    <!-- Main -->
    <div id="main">
      <div class="cl">&nbsp;</div>
      
      <!-- Content -->
      <div id="content">
        


<!-- Box -->
<div class="box">
  <div class="box-head">
    <h2>Messages</h2>
  </div>

<table class="gridtable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>

      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr id="<%= contact.id %>">
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.body %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<!-- End Box -->


