<%= render 'header' %>

<!-- Container -->
<div id="container">
  <div class="shell">

    
    <!-- Message OK -->   
    <div class="msg msg-ok">
      <p><strong>Your file was uploaded succesifully!</strong></p>
      <a href="#" class="close">close</a>
    </div>
    <!-- End Message OK -->   
    
    <!-- Message Error -->
    <div class="msg msg-error">
      <p><strong>You must select a file to upload first!</strong></p>
      <a href="#" class="close">close</a>
    </div>
    <!-- End Message Error -->
    <br />
    <!-- Main -->
    <div id="main">
      <div class="cl">&nbsp;</div>
      
      <!-- Content -->
      <div id="content">
        

        
        <!-- Box -->
        <div class="box">
          <!-- Box Head -->
          <div class="box-head">
            <h2>Testimonial</h2>
          </div>
          <!-- End Box Head -->
          
          <%= form_for(@testimonial, html: {multipart: true }) do |f| %>

              <% if @testimonial.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@testimonial.errors.count, "error") %> prohibited this sms_service from being saved:</h2>

                    <ul>
                    <% @testimonial.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
              <% end %>

            <!-- Form -->
            <div class="form">
                <p>
                  <span class="req">max 100 symbols</span>
                  <label>Who Said <span>(Required Field)</span></label>
                  <%= f.text_field :who_said, class: "field size1" %>
                </p>

                <p>
                  <span class="req">max 100 symbols</span>
                  <label>About the Person <span>(Required Field)</span></label>
                  <%= f.text_field :about, class: "field size1" %>
                </p>

                <p>
                  <span class="req">max 100 symbols</span>
                  <label>Content <span>(Required Field)</span></label>
                  <%= f.text_field :body, class: "field size1" %>
                </p>

                <p>
                  <label>Image <span>(Required Field)</span></label>
                  <%= f.file_field :image, class: "field size1" %>
                </p>
              
            </div>
            <!-- End Form -->
            
            <!-- Form Buttons -->
            <div class="buttons">
              <%= f.submit "Submit", class: "button" %>
            </div>
            <!-- End Form Buttons -->
          <% end %>

        </div>
        <!-- End Box -->


      </div>
      <!-- End Content -->
      
      <!-- Sidebar -->
      <div id="sidebar">
        
        <!-- Box -->
        <div class="box">
          
          <!-- Box Head -->
          <div class="box-head">
            <h2>Management</h2>
          </div>
          <!-- End Box Head-->
          
          <div class="box-content">
            <a href="#" class="add-button"><span>Add new Article</span></a>
            <div class="cl">&nbsp;</div>
            
            <p class="select-all"><input type="checkbox" class="checkbox" /><label>select all</label></p>
            <p><a href="#">Delete Selected</a></p>
            
            <!-- Sort -->
            <div class="sort">
              <label>Sort by</label>
              <select class="field">
                <option value="">Title</option>
              </select>
              <select class="field">
                <option value="">Date</option>
              </select>
              <select class="field">
                <option value="">Author</option>
              </select>
            </div>
            <!-- End Sort -->
            
          </div>
        </div>
        <!-- End Box -->
      </div>
      <!-- End Sidebar -->
      
      <div class="cl">&nbsp;</div>      
    </div>
    <!-- Main -->
  </div>
</div>
<!-- End Container -->

<!-- Footer -->
<div id="footer">
  <div class="shell">
    <span class="left">&copy; <%= Date.today.year %> - SllSolutions</span>
    <span class="right">
      Design by Md. Nurul Amin Shuvo
    </span>
  </div>
</div>
<!-- End Footer -->